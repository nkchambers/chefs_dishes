@using chefs_dishes.Models;
@model DishesView;

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
        <title>Chefs & Dishes</title>
    </head>

    <body>
        <div id="container">
            
            <div class="header d-flex mb-3 mt-3">
                <h1 style="margin-left: 500px;"><a href="/">Chefs</a> | <a href="/dishes">Dishes</a></h1>
            
                <a class="btn btn-dark" href="dishes/new" role="button" style="margin-left: 300px; margin-top: 50px; padding: 10px 30px; font-size: 20px;">Add New Dish</a>
            </div>

            <h2 style="margin-left: 30px;">Check out our roster of Chefs!</h2>

            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th># Dishes Created</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Dish dish in Model.AllDishes)
                    {
                        <tr>
                            <td>@dish.DishName</td>
                            <td>@dish.CreatedBy</td>
                            <td>@dish.Tastiness</td>
                            <td>@dish.Calories</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </body>
</html>