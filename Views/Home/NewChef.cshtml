@model chefs_dishes.Models.Chef;


<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        <title>Chefs & Dishes</title>
    </head>

    <body>
        <div class="container" style="margin: 0px auto;">
            
            <h1 style="margin-top: 30px;">Add a New Chef!</h1>

            <a class="btn btn-dark" href="/" role="button" style="margin-left: 900px; margin-top: 50px; padding: 5px 30px; font-size: 23px;">Home</a>


            <form asp-action="CreateChef" style="font-size: 20px;">
                <div class="mb-2">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName">
                </div>
                <div class="mb-2">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName">
                </div>
                <div class="mb-4">
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    <label asp-for="DateOfBirth"></label>
                    <input asp-for="DateOfBirth">
                </div>
                <input class="btn btn-dark" type="submit" value="Add Chef" style="padding: 5px 20px; margin-left: 240px; font-size: 20px;">
            </form>
        </div>
    </body>
</html>