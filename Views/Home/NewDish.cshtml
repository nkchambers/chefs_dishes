@using chefs_dishes.Models;
@model Dish;


<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        <title>Chefs & Dishes</title>
    </head>

    <body>
        <div class="container" style="margin: 0px auto;">
            
            <h1 style="margin-top: 30px;">Add a New Dish!</h1>

            <a class="btn btn-dark" href="/" role="button" style="margin-left: 900px; margin-top: 20px; padding: 5px 30px; font-size: 23px;">Home</a>


            <form asp-action="CreateDish" style="font-size: 20px; display: flex; align-items: center; justify-content: evenly; font-weight: bold;">
                <div class="col-left" style="flex: 2;">
                    <div class="mb-3">
                        <span asp-validation-for="DishName" class="text-danger"></span><br>
                        <label asp-for="DishName"></label><br>
                        <input asp-for="DishName">
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Calories" class="text-danger"></span><br>
                        <label asp-for="Calories"></label><br>
                        <input asp-for="Calories">
                    </div>
                    <div class="mb-3>
                        <span asp-validation-for="Description" class="text-danger"></span><br>
                        <label asp-for="Description"></label><br>
                        <input asp-for="Description">
                    </div>
                </div>
                <div class="col-center" style="flex: 2; margin-bottom: 120px;">
                    <div class="mb-3">
                        <span asp-validation-for="ChefId" class="text-danger"></span><br>
                        <label asp-for="ChefId"></label><br>
                        <select asp-for="ChefId">
                            @foreach(Chef chef in Model.AvailableChefs)
                            {
                                <option value="@chef.ChefId">@chef.FirstName  @chef.LastName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-right" style="flex: 2; margin-bottom: 110px;">
                    <div class="mb-2">
                        <span asp-validation-for="Tastiness" class="text-danger"></span><br>
                        <label asp-for="Tastiness"></label><br>
                        <select asp-for="Tastiness">
                            <option value="select">select</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                    <input class="btn btn-dark" type="submit" value="Add Dish" style="padding: 5px 20px; margin-bottom: -450px; font-size: 20px;">
                </div>
            </form>
        </div>
    </body>
</html>